<local:SystemPopUpClass x:Class="FastFoodSystem.PopUps.NewComboPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:FastFoodSystem.Scripts"
             xmlns:controls="clr-namespace:FastFoodSystem.Controls"
             mc:Ignorable="d" 
             Height="500" Width="650">
    <Border Background="WhiteSmoke" CornerRadius="10" BorderThickness="5" BorderBrush="#ffab40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Name="title" Content="Nuevo Combo" FontSize="20" Margin="10, 10, 10, 0" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="20, 20, 10, 20">
                            <Label Content="Imagen:"></Label>
                            <controls:EditableImage x:Name="image" Height="200" Margin="0"></controls:EditableImage>
                            <Label Content="Ocultar en Ventas" Margin="0, 20, 0, 0"></Label>
                            <telerik:RadToggleButton IsChecked="False" Name="hide_in_sales_button" Click="Hide_in_sales_button_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Viewbox Height="20">
                                        <Path Height="10" Style="{StaticResource iconoVer}"></Path>
                                    </Viewbox>
                                    <Label Margin="10, 0, 0, 0" Name="hide_in_sale_button_label" Content="Ocultar - Desactivado"></Label>
                                </StackPanel>
                            </telerik:RadToggleButton>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10, 20, 20, 20">
                            <Label Margin="0, 20, 0, 0" Content="Descripción:"></Label>
                            <telerik:RadWatermarkTextBox Name="description_text"></telerik:RadWatermarkTextBox>
                            <Label Content="Categoría:" Margin="0, 20, 0, 0"></Label>
                            <telerik:RadAutoCompleteBox TextSearchMode="Contains" TextSearchPath="Description" SelectionMode="Single" Name="category_search_bar"></telerik:RadAutoCompleteBox>
                            <Label Content="Precio de Venta Unitario:"></Label>
                            <telerik:RadNumericUpDown Name="sale_value" CustomUnit="Bs" NumberDecimalDigits="2" HideTrailingZeros="True" Minimum="0" Value="0"></telerik:RadNumericUpDown>
                            <Label Content="Descuento en Venta:" Margin="0, 20, 0, 0"></Label>
                            <telerik:RadNumericUpDown Name="discount_value" CustomUnit="%" NumberDecimalDigits="0" HideTrailingZeros="True" Minimum="0" Maximum="100" Value="0"></telerik:RadNumericUpDown>
                        </StackPanel>
                    </Grid>
                    <StackPanel>
                        <Label Margin="10, 20, 0, 0" Content="Productos:"></Label>
                        <ScrollViewer Height="250" BorderThickness="1" Margin="10" BorderBrush="Gray" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                <StackPanel Name="products_container">
                                    <controls:ProductLabel Margin="10"></controls:ProductLabel>
                                    <controls:ProductLabel Margin="10"></controls:ProductLabel>
                                    <controls:ProductLabel Margin="10"></controls:ProductLabel>
                                    <controls:ProductLabel Margin="10"></controls:ProductLabel>
                                    <controls:ProductLabel Margin="10"></controls:ProductLabel>
                                </StackPanel>
                                <telerik:RadButton Grid.Row="1" Margin="20" Name="add_product_button" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Add_product_button_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="25">
                                            <Path Style="{StaticResource iconoMas}"></Path>
                                        </Viewbox>
                                        <telerik:Label Content="Añadir Producto"></telerik:Label>
                                    </StackPanel>
                                </telerik:RadButton>
                            </StackPanel>
                        </ScrollViewer>
                        <Grid Margin="10, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <telerik:Label Content="Unidades Disponibles:"></telerik:Label>
                            <telerik:RadNumericUpDown Name="available_units_value" Grid.Column="1" IsEditable="False" Value="1" Minimum="0" NumberDecimalDigits="0" HideTrailingZeros="True" ShowButtons="False" CustomUnit="Unid"></telerik:RadNumericUpDown>
                            <telerik:Label Grid.Column="2" Content="Costo Unitario:"></telerik:Label>
                            <telerik:RadNumericUpDown Name="unit_cost" Grid.Column="3" IsEditable="False" Value="15" Minimum="0" NumberDecimalDigits="2" HideTrailingZeros="True" ShowButtons="False" CustomUnit="Bs"></telerik:RadNumericUpDown>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="2" Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
                <telerik:RadButton Margin="10" Name="save_button" Click="Save_button_Click">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Height="15" Margin="0, 0, 5, 0">
                            <Path Fill="Black" Style="{StaticResource iconoChek}"></Path>
                        </Viewbox>
                        <TextBlock Text="Guardar" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </telerik:RadButton>
                <telerik:RadButton Margin="10" Name="cancel_button" Click="Cancel_button_Click">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Height="15" Margin="0, 0, 5, 0">
                            <Path Fill="Black" Style="{StaticResource iconoCerrar}"></Path>
                        </Viewbox>
                        <TextBlock Text="Cancelar" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </telerik:RadButton>
                <telerik:RadButton Visibility="Collapsed" Margin="10" Name="delete_button" Click="Delete_button_Click">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Height="15" Margin="0, 0, 5, 0">
                            <Path Fill="Black" Style="{StaticResource iconoEliminar}"></Path>
                        </Viewbox>
                        <TextBlock Text="Eliminar" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </telerik:RadButton>
            </StackPanel>
        </Grid>
    </Border>
</local:SystemPopUpClass>
